<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TableRow
            android:id="@+id/tableRow00"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_span="6"
                android:gravity="center"
                android:text="Speed Statistics (mm/s)"
                android:textSize="18dp"
                android:textStyle="bold"
                android:typeface="serif" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/TextView00"
                android:text="Condition "
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:id="@+id/TextView01"
                android:text=" Mean "
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_gravity="center"
                android:layout_width="60dp"/>

            <TextView
                android:id="@+id/TextView02"
                android:text=" Min "
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_gravity="center"
                android:layout_width="60dp"/>

            <TextView
                android:id="@+id/TextView03"
                android:text=" Max "
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_gravity="center"
                android:layout_width="60dp"/>

            <TextView
                android:id="@+id/TextView04"
                android:text=" Stdev "
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_gravity="center"
                android:layout_width="60dp"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView10"
                android:text="First"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:gravity="center_horizontal"
                android:text="ERR" />

            <TextView
                android:id="@+id/textView13"
                android:gravity="center_horizontal"
                android:text="ERR" />

            <TextView
                android:id="@+id/textView12"
                android:gravity="center_horizontal"
                android:text="ERR" />

            <TextView
                android:id="@+id/textView14"
                android:gravity="center_horizontal"
                android:text="ERR" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/textView20"
                android:text="Second "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView21"
                android:gravity="center_horizontal"
                android:text="ERR" />

            <TextView
                android:id="@+id/textView23"
                android:gravity="center_horizontal"
                android:text="ERR" />

            <TextView
                android:id="@+id/textView22"
                android:gravity="center_horizontal"
                android:text="ERR" />

            <TextView
                android:id="@+id/textView24"
                android:gravity="center_horizontal"
                android:text="ERR" />


        </TableRow>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="170dp"
                android:layout_weight="1">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_view_left"
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="15dp"/>
                <edu.stanford.riedel_kruse.euglenascientist.VerticalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed (mm/s)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Measurement #"
                    android:textSize="14sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Condition 1"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="170dp"
                android:layout_weight="1">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/chart_view_right"
                    android:layout_width="140dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="15dp"/>
                <edu.stanford.riedel_kruse.euglenascientist.VerticalTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed (mm/s)"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignLeft="@id/chart_view_right"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:text="Measurement #"
                    android:textSize="14sp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Condition 2"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </RelativeLayout>
        </LinearLayout>



    </TableLayout>


</ScrollView>